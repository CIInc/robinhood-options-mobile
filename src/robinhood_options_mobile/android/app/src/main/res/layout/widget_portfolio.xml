<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header with app name and indicator -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/circle_blue"
            android:layout_marginEnd="6dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RealizeAlpha"
            android:textColor="#666666"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Spacer -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Main equity section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Portfolio Value"
            android:textColor="#999999"
            android:textSize="10sp"
            android:textAllCaps="true"
            android:letterSpacing="0.05"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/portfolio_equity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="middle" />
    </LinearLayout>

    <!-- Change indicators -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <!-- Day Change -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day Change"
                android:textColor="#999999"
                android:textSize="9sp"
                android:layout_marginBottom="2dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/change_arrow"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:src="@drawable/ic_arrow_up"
                    android:layout_marginEnd="2dp" />

                <TextView
                    android:id="@+id/portfolio_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0.00"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:maxLines="1" />
            </LinearLayout>
        </LinearLayout>

        <!-- Change Percentage -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change %"
                android:textColor="#999999"
                android:textSize="9sp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/portfolio_change_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00%"
                android:textSize="13sp"
                android:textStyle="bold"
                android:maxLines="1" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>